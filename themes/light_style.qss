/* Scroll Bar*/
QScrollBar:vertical {
    border: 2px;
    background: rgb(230,230,230);
    width: 10px;    
    margin: 0px 0px 0px 0px;
}

QScrollBar::handle:vertical {         
    min-height: 35px;
    border: none;
    border-radius: 4px;
    background-color: rgb(38, 104, 103);
}

QScrollBar::add-line:vertical {       
    height: 0px;
    subcontrol-position: bottom;
    subcontrol-origin: margin;
}

QScrollBar::sub-line:vertical {
    height: 0px;
    subcontrol-position: top;
    subcontrol-origin: margin;
}

/* Progress bar */
QProgressBar#progress_dialog {
    border: 1px solid;
    border-radius: 5px;
    text-align: center;
}

QProgressBar::chunk#progress_dialog {
    background-color: rgb(248, 188, 36);
    width: 1px;
}